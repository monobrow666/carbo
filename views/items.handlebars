<div class="container-fluid">
  <header>
    {{#if term}}
      search for '{{term}}'
    {{else}}
      recently updated items
    {{/if}}
  </header>

  <div class="list-group">
    {{#each items}}
      <a class="list-group-item list-group-item-action" href="/items/{{id}}">
        <div class="item" data-updated-at="{{updatedAt}}">
          <h5>{{name}}</h5>
          {{brand}} <small class="float-right">{{updatedAtDate}}</small>
        </div>
      </a>
    {{else}}
      <div class="alert alert-warning">nothing found</div>
    {{/each}}
  </div>
</div>
